pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Your build steps here
                sh 'echo Running the build'
            }
        }

        stage('Tag') {
          
            steps {
                script {
                    // Define the tag name
                    def tagName = "v${env.BUILD_NUMBER}" // or any other naming convention

                    // Tag the commit
                    sh """
                        git config user.email "ugagguturu@softility.com"
                        git config user.name "Ugagguturu"
                        git tag -a ${tagName} -m "Release version ${tagName}"
                        git push origin ${tagName}
                    """
                }
            }
        }
    }
}
